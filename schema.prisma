generator client {
  provider = "prisma-client-js"
}

model Profile {
  username    String   @id
  createdAt   DateTime @default(now())
  displayName String?
  metadata    String?
  Account     Account?
}

model Account {
  username    String         @id
  password    String
  User        Profile?       @relation(fields: [username], references: [username])
  Room        Room[]
  Participant Participants[]
}

model Room {
  sid             String         @id
  name            String         @unique
  emptyTimeout    Int
  maxParticipants Int
  creationTime    DateTime
  turnPassword    String
  metadata        String
  numParticipants Int
  numPublishers   Int
  activeRecording Boolean
  creator         String
  Account         Account?       @relation(fields: [creator], references: [username])
  Participant     Participants[]
}

model Participants {
  id          Int     @id @default(autoincrement())
  roomName    String
  username    String
  room        Room    @relation(fields: [roomName], references: [name])
  participant Account @relation(fields: [username], references: [username])
}
