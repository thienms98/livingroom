generator client {
  provider = "prisma-client-js"
}

model Profile {
  username    String   @id
  createdAt   DateTime @default(now())
  displayName String?
  metadata    String?
  Account     Account?
}

model Account {
  username String   @id
  password String
  User     Profile? @relation(fields: [username], references: [username])
  Room     Room[]
}

model Room {
  roomId   String   @id
  roomName String   @unique
  creator  String
  Account  Account? @relation(fields: [creator], references: [username])
}
